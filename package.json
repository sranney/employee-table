{
  "name": "onprem-frontend-interview-homework",
  "version": "0.1.0",
  "description": "A basic CRUD service to be used for OnPrem FE Interview tests",
  "main": "index.js",
  "scripts": {
    "client-dev": "vite",
    "client-build": "vite build",
    "preview": "vite preview",
    "server-dev": "node server/local-bootstrap",
    "build": "rm -rf server/dist && babel server/src -d server/dist && cp server/src/db/*.json server/dist/db",
    "prod": "node server/dist",
    "dev": "concurrently \"npm run client-dev\" \"npm run server-dev\"",
    "check-types": "tsc",
    "lint": "eslint --ignore-path .eslintignore --ext .js,.ts,.tsx 'client'",
    "prettier": "prettier --ignore-path .eslintignore 'client'",
    "format": "npm run prettier -- --write",
    "check-format": "npm run prettier --list-different",
    "validate": "npm run client-test && tsc && npm run check-format && npm run lint && npm run client-build",
    "prepare": "husky install",
    "client-test": "jest",
    "client-test:watch": "jest --watch"
  },
  "author": "Andrew Levine",
  "license": "MIT",
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.2.1",
    "@fortawesome/free-solid-svg-icons": "^6.2.1",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@hapi/hapi": "^21.1.0",
    "@hapi/inert": "^7.0.0",
    "@hapi/joi": "^17.1.1",
    "autoprefixer": "^10.4.13",
    "chalk": "^1.1.1",
    "node-uuid": "^1.4.7",
    "postcss": "^8.4.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.20.7",
    "@babel/core": "^7.20.12",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-object-rest-spread": "^7.20.7",
    "@babel/plugin-transform-runtime": "^7.19.6",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@babel/register": "^7.18.9",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.2.5",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "@vitejs/plugin-react": "^3.0.1",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-jest-dom": "^4.0.3",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-testing-library": "^5.9.1",
    "husky": "^8.0.3",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "msw": "^0.49.2",
    "prettier": "^2.8.3",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.9.4",
    "uuid": "^9.0.0",
    "vite": "^4.0.4",
    "whatwg-fetch": "^3.6.2"
  }
}
